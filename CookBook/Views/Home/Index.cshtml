@model CookBook.ViewModels.RecipesViewModel
@{
    ViewBag.Title = "Home Page";
}
<br />
<style>
    .octicon {
        font-size: 32px;
    }
</style>
<body class="classForIndexPage">
    <div class="pt-3 pb-3 naslov shadow-lg rounded">
        <h1 class="text-light text-center">Dobrodošli na CookBook!</h1>
    </div><br />
    <div class="container bg-light shadow-lg pt-3 pb-3 pl-3 pr-3">
        <div class="row rounded  ">
            <div class="col-3">
                <blockquote class="blockquote text-center ">
                    <p class="mb-0">Brige se lakše ispiraju supom.</p>
                    <footer class="blockquote-footer"> <cite>Jevrejska izreka</cite></footer>
                </blockquote>
            </div>
            <div class="col-3">
                <blockquote class="blockquote text-center ">
                    <p class="mb-0">Neka vaša hrana bude lek, a vaš lek vaša hrana.</p>
                    <footer class="blockquote-footer"> <cite>Hipokrat</cite></footer>
                </blockquote>
            </div>
            <div class="col-3">
                <blockquote class="blockquote text-center ">
                    <p class="mb-0">Glad je najbolji kuvar.</p>
                    <footer class="blockquote-footer"> <cite>Ksenofont</cite></footer>
                </blockquote>
            </div>
            <div class="col-3">
                <blockquote class="blockquote text-center ">
                    <p class="mb-0">Novo britansko istraživanje pokazalo je kako 9 od 10 ispitanika voli čokoladu. Deseti laže.</p>
                    <footer class="blockquote-footer"><cite>Robert Paul</cite></footer>
                </blockquote>
            </div>
        </div>
        <div class="row ">
            <div class="col-3">
                <blockquote class="blockquote text-center ">
                    <p class="mb-0">Sve je dobro ukoliko je napravljeno od čokolade.</p>
                    <footer class="blockquote-footer"> <cite>Jo Brand</cite></footer>
                </blockquote>
            </div>
            <div class="col-3">
                <blockquote class="blockquote text-center ">
                    <p class="mb-0">Ne postoji iskrenija ljubav od ljubavi prema hrani.</p>
                    <footer class="blockquote-footer"> <cite>George Bernard Shaw</cite></footer>
                </blockquote>
            </div>
            <div class="col-3">
                <blockquote class="blockquote text-center ">
                    <p class="mb-0">Sve dok imaš hranu u svojim ustima rešio si sva trenutna pitanja.</p>
                    <footer class="blockquote-footer"> <cite>Franz Kafka</cite></footer>
                </blockquote>
            </div>
            <div class="col-3">
                <blockquote class="blockquote text-center ">
                    <p class="mb-0">Život bez ijedne gozbe dug je put na kome nema krčme.</p>
                    <footer class="blockquote-footer"> <cite>Demokrit</cite></footer>
                </blockquote>
            </div>


        </div>
    </div>
    <br /><br />
    <div class="row justify-content-center">
        <div class="col-9">
            <button id="GetInfo"><span class="octicon octicon-unverified"></span></button><br />

            <div id="info" style="display:none; width:100%; height:70px;">
                <mark>Ukoliko želite da dodate novi recept morate se registrovati.</mark>
            </div>
        </div>
    </div>



    <div class="row justify-content-center pt-2 pb-2">
        <div class="col-md-6 col-lg-11 rounded shadow justify-content-center">

            <div id="carouselExampleControls" class="carousel slide" data-interval="3000" data-ride="carousel" data-wrap="true">
                <div class="carousel-inner" style=" width:100%; height: 600px !important;">

                    @foreach (var item in Model.Recipes)
                    {
                        if (Model.Recipes.IndexOf(item) == 0)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@Url.Content(Model.ImagesPaths[Model.Recipes.IndexOf(item)])">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Url.Content(Model.ImagesPaths[Model.Recipes.IndexOf(item)])">
                            </div>
                        }


                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>

    </div>
    <script>

        $(document).ready(function () {
            $("#GetInfo").click(function () {
                if ($("#info").is(":hidden")) {
                    $("#info").show();
                }
                else {
                    $("#info").hide();
                }
            })
        }
        )
    </script>
</body>


