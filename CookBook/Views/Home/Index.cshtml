@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron shadow-lg">
    <h1 class="text-danger text-center">Dobrodošli na CookBook!</h1>
</div>
@*Dodati mudre izreke pomocu blockquote
    u okviru posebnog diva, sa desne strane*@
<div class="row justify-content-center pt-2 pb-2">
    <div class="col-md-5 col-lg-10 rounded shadow justify-content-center" >
        
        <div id="carouselExampleControls" class="carousel slide" data-interval="3000" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/imageForBrand/136646865059f70d347c436528587872_v4 big.jpg">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/imageForBrand/download (1).jpg">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/imageForBrand/download.jpg">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/imageForBrand/pizza.jpg">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        
    </div>
  
</div>