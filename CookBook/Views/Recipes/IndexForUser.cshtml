@model CookBook.ViewModels.ProfileViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container shadow-lg">

    <h2>Recepti</h2>
    @if (!Model.Recipes.Any())
    {
        <p>Nazalost, nema jos nijednog recepta. </p>
    }
    else
    {
        <table id="rowDiv" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Recept</th>                  
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Recipes)
                {
                <tr>
                    <td>
                        <div class="col-10 col-xs-3">
                            @Html.ActionLink(item.Name, "Details", "Recipes", routeValues: new { @id = item.Id }, htmlAttributes: new { @style = "font-size:30px" })

                            <img class="rounded shadow-lg " src="@Url.Content(Model.ImagesPaths[Model.Recipes.IndexOf(item)])" style="width:100%; height:500px" />
                        </div>
                    </td>                 
                </tr>
                }
            </tbody>
        </table>
    }
</div>
<script>
    $(document).ready(function () {
        $("#rowDiv").DataTable({
            "info": false
        });
    });

</script>

